{
	"compilerOptions": {
		"target": "es6",
		"experimentalDecorators": true,
		"module": "commonjs",
		"strict": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./build",
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"lib": ["es2015", "es2016", "esnext.asynciterable"]
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"commitlint.config.js"
	]
}
